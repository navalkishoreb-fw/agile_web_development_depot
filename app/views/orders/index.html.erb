<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<div id="orders" class="container">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-md-4">
        <%= render partial: 'order', locals: { order: order, show_button: true } %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "New order", new_order_path, class: "btn btn-success" %>
</div>