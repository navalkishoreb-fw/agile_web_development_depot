<% if notice %>
  <aside id="notice" class="alert alert-info mb-4"><%= notice %></aside>
<% end %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Orders</h1>
  <%= link_to "New Order", new_order_path, class: "btn btn-primary btn-lg" %>
</div>

<div id="orders" class="container">
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-md-4 mb-4"> <!-- Changed mb-3 to mb-4 for consistent spacing -->
        <%= render partial: order, locals: { order: order, show_button: true } %>
      </div>
    <% end %>
  </div>
</div>