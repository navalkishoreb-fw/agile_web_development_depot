<div id="<%= dom_id order %>">
  <p>
    <strong>Name:</strong>
    <%= order.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= order.address %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= order.email %>
  </p>

  <p>
    <strong>Pay type:</strong>
    <%= order.pay_type %>
  </p>

  <p>
    <strong>Order Status:</strong>
    <%= order.order_status.present? ? order.order_status.status : 'No status available' %>
  </p>

</div>
