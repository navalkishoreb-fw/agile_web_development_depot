<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<%= render @product %>

<div class="mt-3">
  <div class="d-flex mb-2">
    <%= link_to "Edit this product", edit_product_path(@product), class: 'btn btn-warning me-2' %>
    <%= button_to "Destroy this product", @product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
  <div>
    <%= link_to "Back to products", products_path, class: 'btn btn-info btn-lg btn-block' %>
  </div>
</div>