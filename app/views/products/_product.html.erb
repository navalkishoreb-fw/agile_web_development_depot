<div id="<%= dom_id(product) %>" class="card mb-3">
  <div class="card-body d-flex">
    <div class="me-3">
      <%= image_tag(product.image_url, class: 'img-fluid') %>
      <p class="card-text mt-2"><%= product.image_url %></p>
    </div>
    <div>
      <h5 class="card-title"><strong>Title:</strong> <%= product.title %></h5>
      <p class="card-text"><strong>Description:</strong> <%= strip_tags(product.description) %></p>
      <p class="card-text"><strong>Price:</strong> <%= product.price %></p>
    </div>
  </div>
</div>